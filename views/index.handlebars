{{!-- Uneaten burger section --}}

<div class="burger-lists">
    <div class="row">
        <div class="col s6">
            <div class="uneaten">
                <h2>Uneaten Burgers</h2>
                {{#each burger}}
                {{#unless this.devoured}}
                <div class="row">
                    <div class="col s4 offset-s3">
                        <p>{{this.burger_name}}</p>
                    </div>
                    <div class="col s2">
                        <button class="waves-effect waves-light btn-small red darken-1 devour" 
                            data-id="{{this.id}}">Devour!</button>
                    </div>
                </div>
                {{/unless}}
                {{/each}}
            </div>
        </div>

    {{!-- Eaten burgers section --}}

        <div class="col s6">
            <div class="eaten">
                <h2>Devoured Burgers</h2>
                {{#each burger}}
                {{#if this.devoured}}
                <div class="row">
                    <div class="col s4 offset-s3">
                        <p>{{this.burger_name}}</p>
                    </div>
                    <div class="col s2">
                        <button class="waves-effect waves-light btn-small red darken-1 delete"
                            data-id="{{this.id}}">DELETE!</i></button>
                    </div>
                </div>
                {{/if}}
                {{/each}}
            </div>
        </div>
    </div>

    {{!-- New burger form --}}
    <div class="row">
        <form class="col s6 offset-s3 burger-form">
            <div class="row">
                <div class="input-field col s11">
                    <textarea id="textarea1" class="materialize-textarea user-input"></textarea>
                    <label for="textarea1">Enter your burger name</label>
                </div>
            </div>
            <div class="row submit-btn">
                <button class="btn waves-effect waves-light" type="submit" name="action">Submit</button>
            </div>
        </form>
    </div>
</div>