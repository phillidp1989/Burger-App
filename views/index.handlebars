<div class="burger-lists">
    <div class="row">
        <div class="col s6">
            <div class="uneaten">
                <h2>Uneaten Burgers</h2>
                {{#each burger}}
                {{#unless this.devoured}}
                <div class="row">
                    <div class="col s4 offset-s3">
                        <p>{{this.burger_name}}</p>
                    </div>
                    <div class="col s2">
                        <button class="waves-effect waves-light btn-small red darken-1" id="devour"
                            data-id="{{this.id}}">Devour!</button>
                    </div>
                    
                </div>
                
                {{/unless}}
                {{/each}}


            </div>
        </div>

        <div class="col s6">
            <div class="eaten">
                <h2>Devoured Burgers</h2>
                {{#each burger}}
                {{#if this.devoured}}
                <p>{{this.burger_name}}<span><button data-id="{{this.id}}"><i
                                class="fas fa-trash-alt"></i></button></span>
                </p>
                {{/if}}
                {{/each}}
            </div>
        </div>
    </div>



    <div class="row">
        <form class="col s6 offset-s3">
            <div class="row">
                <div class="input-field col s11">
                    <textarea id="textarea1" class="materialize-textarea"></textarea>
                    <label for="textarea1">Enter your burger name</label>
                </div>
            </div>
            <div class="row submit-btn">
                <button class="btn waves-effect waves-light" type="submit" name="action">Submit</button>
            </div>
        </form>
    </div>
</div>